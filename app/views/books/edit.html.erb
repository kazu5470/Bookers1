<% if flash[:complete] %>
  <div class="flash">
    <%= flash[:complete] %>
  </div>
<% end %>

<main class="edit-main">
  <h1>Editing Book</h1>
    <%= form_with model: @book,url: book_path(@book.id),method: :patch do |f| %>
    <% if @book.errors.any? %>
      <div class="error">
        <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-title">Title</div>
      <%= f.text_field :title %>
    <div class="form-body">Body</div>
      <%= f.text_area :body %><br>
    <div class="upload">
      <%= f.submit "Update Book" %>
    </div>
  <% end %>
    <div class="menu">
      <%= link_to "Show", book_path(@book) %>
    </div>
      |
    <div class="menu">
      <%= link_to "Back", books_path %>
    </div>
  </body>
</main>